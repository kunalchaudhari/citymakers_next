<%= simple_form_for(@city_maker) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :description %>
    <%= f.input :mobile %>
    <%= f.input :landline %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :country %>
    <%= f.input :location_xy %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
